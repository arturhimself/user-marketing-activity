{
	"compilerOptions": {
		"outDir": "./build",
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"removeComments": true,
		"sourceMap": true, // add production env
		"noImplicitAny": true
	},
	"include": ["./src"],
	"exclude": ["node_modules", "build"]
}